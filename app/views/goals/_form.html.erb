<%= form_for(@goal) do |f| %>
  <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
      <% @goal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= select_tag(:goal_owner, options_for_select([["Task", "task"], ["Project", "project"]]), id: 'goal_owner') %>
  <%= select_tag(:project_id, options_for_select(@projects.map {|project| [project.name, project.id]}), id: 'project') %>
  <%= select_tag(:task_id, options_for_select(@tasks.map {|task| [task.name, task.id]}), id: 'task') %>

  <%= select_tag(:goal_type, options_for_select([['Negative', -1], ['Positive', 1]])) %>
  <%= text_field :goal, :amount %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
