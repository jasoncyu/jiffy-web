<h1>Listing entries</h1>
<% @data_by_day.each do |day, data| %>
  <h5><%= "#{Date::DAYNAMES[day.wday]}, #{day.strftime(@date_format)}" %></h5>
<table class="table">
  <thead>
    <tr>
      <th>Start</th>
      <th>Stop</th>
      <th>Project</th>
      <th>Task</th>
      <th>Note</th>
    </tr>
  </thead>

  <tbody class="table-striped table-hover">
      <% data.each do |entry| %>
        <tr>
          <td><%= entry.pretty :start_time %></td>
          <td><%= entry.pretty :stop_time %></td>
          <td><%= entry.duration %></td>
          <td><%= entry.project ? entry.project.name : "" %></td>
          <td><%= entry.task ? entry.task.name : "" %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

